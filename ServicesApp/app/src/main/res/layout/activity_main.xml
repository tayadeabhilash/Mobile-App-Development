<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#E6EBE0"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PDF Download Activity"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center" />

    <!-- Instructional Text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/please_provide_a_list_of_five_sjsu_pdfs_to_download"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hardcode_of_files_is_file_or_you_can_provide_full_qualified_names"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/pdf1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pdf1_file_location"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#ED6A5A"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/pdf2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pdf2_file_location"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#ED6A5A"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/pdf3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pdf3_file_location"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#ED6A5A"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/pdf4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pdf4_file_location"
        android:layout_marginBottom="12dp"
        android:backgroundTint="#ED6A5A"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_gravity="center" />

    <EditText
        android:id="@+id/pdf5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pdf5_file_location"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#ED6A5A"
        android:textColor="#000000"
        android:padding="12dp"
        android:layout_gravity="center" />

    <!-- Download Button -->
    <Button
        android:id="@+id/downloadBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_download"
        android:textColor="#000000"
        android:backgroundTint="#ED6A5A"
        android:textStyle="bold"
        android:padding="12dp"
        android:layout_gravity="center" />

</LinearLayout>
